@model IEnumerable<HelpDeskEntities.Account.User>

@{
    ViewBag.Title = "User List";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <a href="@Url.Action("AddUser","User")" class="btn btn-sm btn-success">
                    <i class="fa fa-plus"></i> Add New</a>
                    <span class="pull-right">@TempData["msg"]</span>
                </h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <div class="box-body">              
                <table id="UsrTbl" class="table table-responsive">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                EmailID
                            </th>
                            <th>
                                Contact No
                            </th>
                            <th>
                                User Group
                            </th>
                            <th>
                                Last Login
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.EmailID
                                </td>
                                <td>
                                    @item.ContactNo
                                </td>
                                <td>
                                    @item.UserGroup.UsrGroup
                                </td>
                                <td>
                                    @item.last_Login
                                </td>
                                <td>
                                    <a href="@Url.Action("UpdateUser","User", new { UID = item.UID })" class="btn btn-sm btn-info"><i class="fa fa-pencil"></i> Edit</a>
                                    <a href="#" onclick="DeleteUser('@item.UID')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>                
            </div>
            <!-- /.box-body -->
            <div class="box-footer">                
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#UsrTbl').DataTable({
            responsive: true
        });
    });

    function DeleteUser(UID) {
        swal({
            title: 'Are you sure?',
            text: "You want to Remove this user!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Remove it!'
        }).then((result) => {
            console.log(result);
            if (result) {
                //closeTicketSubmit(id);
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DeleteUser", "User")',
                    data: { UID: UID },
                    async: false,
                    success: function (res) {
                        if (res.status) {
                            swal({
                                title: 'Success',
                                text: "Successfully Deactivated",
                                type: 'success'
                            });
                            location.reload();
                        } else {
                            swal({
                                title: 'Try Again',
                                text: "Server issue! Try after sometime",
                                type: 'error'
                            });
                        }
                    }
                });
            }
        })
    }

</script>






