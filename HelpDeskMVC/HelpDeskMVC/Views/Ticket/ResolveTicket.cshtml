@model HelpDeskMVC.Models.ResolveTicketViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Provide Resolution</h3>
            </div>
            <div class="box-body">
                @*@using (Html.BeginForm())*@
                    @using (Html.BeginForm("ResolveTicket", "Ticket", FormMethod.Post, new { enctype = "multipart/form-data" }))                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model=>model.TicketID)
                    <div class="form-group">
                        <label>Resolution Comment</label>
                        @Html.EditorFor(model => model.ResolutionComment, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ResolutionComment, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Attach Proof of Resolution</label>
                        @Html.TextBoxFor(model => model.ResolutionAttachment, "", new { @type = "file", @multiple = "multiple" })
                        @Html.ValidationMessageFor(model => model.ResolutionAttachment, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Resolve" class="btn btn-sm btn-success" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
