@using HelpDeskCommon.CommonClasses
@{ 
    var role = HttpContext.Current.User.IsInRole("admin") ? "admin" : (HttpContext.Current.User.IsInRole("HelpdeskUser") ? "HelpdeskUser" : (HttpContext.Current.User.IsInRole("SupeUser") ? "SupeUser" : "EndUser"));
    var CurrentUserName = @GenericClass.CsvToStringArray(HttpContext.Current.User.Identity.Name)[1];
    var CurrentUserEmail = @GenericClass.CsvToStringArray(HttpContext.Current.User.Identity.Name)[0];
    TempData["ActiveAction"] = ViewContext.RouteData.Values["Action"].ToString();
    TempData["ActiveController"] = ViewContext.RouteData.Values["Controller"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
